{
	"coc.preferences.snippets.enable": true,
	"coc.preferences.snippetStatusText": "",
	"coc.preferences.formatOnType": false,
	"coc.preferences.formatOnSaveFiletypes": [ "cpp", "svg" ],

	"codeLens.enable": true,

	"diagnostic.displayByAle": false,
	"diagnostic.refreshOnInsertMode": true,

	"explorer.quitOnOpen": true,

	"git.addedSign.text": "+",
	"git.removedSign.text": "-",
	"git.changedSign.text": "â‰ˆ",

	"pairs.enableCharacters": [	"(", "[", "{", "'", "\"", "`" ],

	"yank.priority": 10,
	"yank.highlight.duration": 400,
	"yank.limit": 2,
	"yank.list.maxsize": 100,

	"languageserver":
	{
		"clangd":
		{
			"command": "clangd",
			"args": ["--clang-tidy", "--header-insertion=never", "--suggest-missing-includes", "--all-scopes-completion=true", "--completion-style=detailed", "--resource-dir=${HOME}/.cache/clangd"],
			"filetypes": ["c","h","cpp","hpp","cc","hh","cxx","hxx","objc","objcpp"],
			"rootPatterns": [".git"],
			"initializationOptions":
			{
				"cache":
				{
					"directory": "${HOME}/.cache/clangd"
				}
			}
		},
		"markdownlint":
		{
			"command": "markdownlint",
			"args": [""],
			"filetypes": ["md", "MD", "markdown"]
		},
		"shellcheck":
		{
			"command": "shellcheck",
			"args": [""],
			"filetypes": ["sh", "bash", "zsh", "fish"]
		}
	}
}
